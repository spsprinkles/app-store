{
  "$schema": "https://developer.microsoft.com/json-schemas/spfx-build/config.2.0.schema.json",
  "version": "2.0",
  "bundles": {
    "app-store-web-part": {
      "components": [
        {
          "entrypoint": "./lib/webparts/appStore/AppStoreWebPart.js",
          "manifest": "./src/webparts/appStore/AppStoreWebPart.manifest.json"
        }
      ]
    }
  },
  "externals": {
    "main-lib": {
      "globalName": "main-lib",
      "path": "../dist/app-store.min.js"
    }
  },
  "localizedResources": {
    "AppStoreWebPartStrings": "lib/webparts/appStore/loc/{locale}.js"
  }
}